<Page
    x:Class="Contacts.Views.ContactDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Header="First Name" Text="{x:Bind ViewModel.Contact.FirstName , Mode=TwoWay}" />
        <TextBox Grid.Column="1" Header="Street" Text="{x:Bind ViewModel.Contact.Address.Street, Mode=TwoWay}" />
        <Button Grid.Row="1" Command="{x:Bind ViewModel.UpsertCommand}">Save</Button> 
    </Grid>
</Page>
