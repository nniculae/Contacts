<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="Contacts.Controls.LabelContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Contacts.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBox Header="{x:Bind TextBoxHeader, Mode=OneTime}" Text="{x:Bind TextBoxText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel
            Margin="0,8,0,0"
            Orientation="Horizontal"
            Visibility="{x:Bind ValidationErrorsVisibilty, Mode=OneWay}">
            <FontIcon
                Margin="0,0,4,0"
                Foreground="Red"
                Glyph="&#xE783;" />
            <TextBlock Foreground="Red" Text="{x:Bind ValidationErrorsText, Mode=OneWay}" />
        </StackPanel>
    </StackPanel>
</ContentDialog>
